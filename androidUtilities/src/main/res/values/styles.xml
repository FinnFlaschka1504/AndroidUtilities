<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="TileStyle">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TileStyle.Fill" parent="TileStyle">
        <item name="android:background">@drawable/rounded_background_fill</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:layout_marginVertical">0dp</item>
        <item name="android:layout_marginHorizontal">0dp</item>

    </style>

    <style name="TileStyle_Fill_Foreground">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="TileStyle_Fill_Background">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
<!--        <item name="android:layout_margin">0dp</item>-->
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
